---
export interface Props {
	name: string;
	short: string;
}

const { name, short } = Astro.props;
---

<div class="flex flex-col gap-3">
    <div class="alert shadow-lg">
        <div class="prose">
            <p><span class="text-primary font-bold">{short}</span>: {name}</p>
        </div>
        <div class="flex-none">
            <button class="btn btn-sm btn-primary">See Detail</button>
        </div>
    </div>

    <div class="ml-6 pl-6 border-primary border-l-2">
        <slot></slot>
    </div>
</div>